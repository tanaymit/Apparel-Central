<%-include('heading')%>
<style>
    .container_popup{
        box-shadow: 5px 10px #888888;
    }
    .popup{
        width: 400px;
        background: #fff;
        border-radius: 6px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%) scale(0.1);
        text-align: center;
        padding: 0 30px 30px;
        color: #333;
        visibility: hidden;
        transition: transform 0.4s, top 0.4s;
        box-shadow: 5px 10px 10px 5px #555555;
    }
    
    .open-popup{
        visibility: visible;
        top: 50%;
        transform: translate(-50%,-50%) scale(1);
    }
    
    .popup-image{
        width: 150px;
        margin-top: -75px;
        border-radius: 50%;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    
    .popup h2{
        font-size: 38px;
        font-weight: 500;
        margin: 30px 0 10px;
    }
    
    .popup button{
        width: 100%;
        margin-top: 50px;
        padding: 10px 0;
        background: #6fd649;
        color: #fff;
        border: 0;
        outline: none;
        font-size: 18px;
        border-radius: 4px;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    </style>
<body>
    <%-include('navbar') %>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
          <div
            class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <% for(let i = 0; i < allProducts.length; i++){%>
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="<%=allProducts[i].image%>" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">Kipsta Checked Shirt</h5>
                            <!-- Product price-->
                            
                        </div>
                    </div>
                    <!-- Product actions-->
                    
                    <input type="text" name="item" id="item1" style="visibility: hidden;" value="<%= allProducts[i].name%>">
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><input type="submit" value="Buy Now"
                            class="btn btn-outline-dark mt-auto cart-button" onclick="openPopup()"
                            ></div>
                        </div>
                  
                </div>
            </div>
            <%}%>
            </div>
        </div>
    </section>
    <!-- Popup Window -->
    <div class="container_popup">
        <div class="popup" id="popup">
            <div class="card-body p-4 p-md-5">
                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Login to Shop</h3>
                <form onsubmit="" method="post" action="/login">
                  <div class="form-outline">
                      <input type="text" id="username" required class="form-control form-control-lg" name="username"/>
                      <label class="form-label" for="userame">Username</label>
                    </div>
                    <br>
                    <div class="form-outline">
                      <input type="password" id="password" required class="form-control form-control-lg" name="password"/>
                      <label class="form-label" for="password">Password</label>
                    </div>                      

                  <div class="mt-4 pt-2">
                    <input class="btn btn-primary btn-lg" type="submit" value="Submit" style="background-color: black;"/>
                  </div>
                </form>
                
              </div>
              <label class="form-label" for="userame">Don't have an account? <a href="/register">Sign up</a></label>
        </div>
    </div>
    <script>
        let popup = document.getElementById('popup');
        function openPopup() {
            document.body.scrollTop = document.documentElement.scrollTop = 0;
            popup.classList.add('open-popup');
        }
        function closePopup() {
            popup.classList.remove('open-popup');
        }
    </script>

<%-include('footer')%>
</body>