<%-include('heading')%>
<body>
    <%-include('navbar_loggedIn') %>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
          <div
            class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <% for(let i = 0; i < allProducts.length; i++){%>
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="<%=allProducts[i].image%>" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">Kipsta Checked Shirt</h5>
                            <!-- Product price-->
                            
                        </div>
                    </div>
                    <!-- Product actions-->
                    <form action="/allProducts1" method="post">
                        <input type="text" name="item" id="item1" style="visibility: hidden;" value="<%= allProducts[i].name%>">
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><input type="submit" value="Buy Now"
                                class="btn btn-outline-dark mt-auto cart-button" onclick="this.value = '+1'"
                            ></div>
                        </div>
                    </form>
                </div>
            </div>
            <%}%>
            </div>
        </div>
    </section>